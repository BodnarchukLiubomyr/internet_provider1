<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.company.controller.servlet.Home</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/internet_provider/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.company.controller.servlet.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/internet_provider/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.company.controller.servlet.Registration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/internet_provider/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuggestTariffs</servlet-name>
        <servlet-class>com.company.controller.servlet.SuggestTariffs</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SuggestTariffs</servlet-name>
        <url-pattern>/internet_provider/suggestTariffs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTariff</servlet-name>
        <servlet-class>com.company.controller.servlet.AddTariff</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTariff</servlet-name>
        <url-pattern>/internet_provider/addTariff</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserPayments</servlet-name>
        <servlet-class>com.company.controller.servlet.UserPayments</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserPayments</servlet-name>
        <url-pattern>/internet_provider/userPayments</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OwnWallet</servlet-name>
        <servlet-class>com.company.controller.servlet.OwnWallet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>OwnWallet</servlet-name>
        <url-pattern>/internet_provider/ownWallet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaceChoose</servlet-name>
        <servlet-class>com.company.controller.servlet.PlaceChoose</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PlaceChoose</servlet-name>
        <url-pattern>/internet_provider/placeChoose</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Render</servlet-name>
        <servlet-class>com.company.controller.servlet.Render</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Render</servlet-name>
        <url-pattern>/internet_provider/render</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUserSuggestion</servlet-name>
        <servlet-class>com.company.controller.servlet.AddUserSuggestion</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddUserSuggestion</servlet-name>
        <url-pattern>/internet_provider/userSuggestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuggestionExamples</servlet-name>
        <servlet-class>com.company.controller.servlet.SuggestionExamples</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SuggestionExamples</servlet-name>
        <url-pattern>/internet_provider/suggestionExamples</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.company.controller.filter.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <servlet-name>UserPayments</servlet-name>
        <servlet-name>OwnWallet</servlet-name>
        <servlet-name>SuggestTariffs</servlet-name>
        <servlet-name>AddUserSuggestion</servlet-name>
        <servlet-name>Render</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.company.controller.filter.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <servlet-name>AddTariff</servlet-name>
        <servlet-name>SuggestionExamples</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.company.controller.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>Login</servlet-name>
        <servlet-name>Registration</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>AdminBlockedPage</filter-name>
        <filter-class>com.company.controller.filter.AdminBlockedPage</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminBlockedPage</filter-name>
        <servlet-name>PlaceChoose</servlet-name>
    </filter-mapping>

</web-app>
